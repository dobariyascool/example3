<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FloatingMiniButton" parent="FloatingButtonDesignSupport">
        <item name="rippleColor">@color/orange_light</item>
        <item name="fabSize">mini</item>
        <item name="android:src">@drawable/edit</item>
        <item name="android:layout_marginTop">143dp</item>
        <item name="android:padding">@dimen/control_SpecingSmall</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="pressedTranslationZ">12dp</item>//show shadow when pressed
    </style>

    <!--<style name="ToolBar" parent="ThemeOverlay.AppCompat.Light">-->
