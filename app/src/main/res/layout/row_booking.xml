<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BusinessInfoCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/control_SpecingSmall"
        android:paddingTop="@dimen/control_SpecingSmall">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <com.rey.material.widget.TextView
                android:id="@+id/txtPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingEnd="@dimen/control_SpecingSmall"
                android:paddingStart="@dimen/control_SpecingSmall"
                android:text="@string/abApp" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingEnd="@dimen/control_SpecingSmall"
                android:paddingStart="@dimen/control_SpecingSmall"
                android:textSize="12sp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <com.rey.material.widget.TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingEnd="@dimen/control_SpecingSmall"
                android:paddingStart="@dimen/control_SpecingSmall" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDate"
                android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <com.rey.material.widget.TextView
                android:id="@+id/txtStatus"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingEnd="@dimen/control_SpecingSmall"
                android:paddingStart="@dimen/control_SpecingSmall" />

            <com.rey.material.widget.ImageButton
                android:id="@+id/ibCancelBooking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/txtStatus"
                android:background="@color/offwhite"
                android:paddingEnd="@dimen/control_SpecingSmall"
                android:paddingStart="@dimen/control_SpecingSmall" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>