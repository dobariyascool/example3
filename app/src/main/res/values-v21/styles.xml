<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--<item name="android:windowAllowEnterTransitionOverlap">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
        <!--<item name="android:windowTransitionBackgroundFadeDuration">0</item>-->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorEdgeEffect">@color/primary_light</item>
        <!--//used for scrolling effect-->
        <!--//used for ripple effect and list selector-->
        <!--<item name="android:colorControlHighlight">@color/transparent_orange</item>-->
    </style>

    <style name="FloatingActionButton">com.github.clans.fab.FloatingActionButton</style>

    <style name="FloatingButton" parent="FloatingActionButton">
        <item name="fab_colorNormal">@color/accent</item>
        <item name="rd_rippleColor">@color/accent_light</item>
        <item name="fab_size">normal</item>
        <item name="fab_colorPressed">@color/accent_light</item>
    </style>


    <style name="FloatingMiniButton" parent="FloatingButtonDesignSupport">
        <item name="rippleColor">@color/orange_light</item>
        <item name="fabSize">mini</item>
        <item name="android:src">@drawable/edit</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">170dp</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingMedium</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="pressedTranslationZ">12dp</item>//show shadow when pressed
    </style>

    <style name="AppCompactCardView">android.support.v7.CardView</style>

    <style name="DefaultCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="cardBackgroundColor">@color/background_img</item>
        <item name="android:layout_marginBottom">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginStart">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingTiny</item>
    </style>

    <style name="CardViewTransparent" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="cardBackgroundColor">@color/card_white</item>
        <item name="android:layout_marginBottom">@dimen/control_SpecingSmall</item>
        <item name="android:layout_marginStart">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingTiny</item>
        <item name="android:foreground">@drawable/offer_ripple_effect</item>
    </style>

    <style name="CardViewNewOption" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="android:foreground">@drawable/cardview_ripple_effect</item>
        <item name="cardBackgroundColor">@color/card_white</item>
    </style>

    <style name="CardViewOption" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="android:foreground">@drawable/cardview_ripple_effect</item>
        <item name="cardBackgroundColor">#edbf47</item>
    </style>

    <style name="CardViewCancelledOption" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="android:foreground">@drawable/cardview_ripple_effect</item>
        <item name="cardBackgroundColor">#ec774b</item>
    </style>


    <style name="BusinessInfoCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="android:layout_marginBottom">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginStart">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingTiny</item>
        <item name="cardBackgroundColor">@color/background_img</item>
    </style>

    <style name="Switch">
        <item name="sw_trackSize">14dp</item>
        <item name="sw_trackCap">round</item>
        <item name="sw_thumbRadius">10dp</item>
        <item name="sw_thumbElevation">2dp</item>
        <item name="sw_animDuration">@android:integer/config_shortAnimTime</item>
        <item name="sw_interpolator">@android:anim/decelerate_interpolator</item>
    </style>

    <style name="MaterialButton">com.rey.material.widget.Button</style>

    <style name="StatusButton" parent="MaterialButton">
        <item name="android:background">@drawable/call_btn_border</item>
        <item name="android:padding">@dimen/control_SpecingSmall</item>
        <item name="android:textSize">@dimen/control_TextSmall</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="rd_enable">false</item>
        <!--<item name="android:fontFamily">Roboto-Regular</item>-->
    </style>



</resources>
